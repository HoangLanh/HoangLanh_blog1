<div class="row blog-post">
  <div class="col-lg-12">
    <div class="thumbnail">
      <%= image_tag @post.picture.url if @post.picture? %>
	<div class="caption">
	  <div class="item-info">
	    <a class="name-title break-word"><%= link_to @post.title, @post %></a>
	      <% if @post.user.avatar.present? %>
		<%= link_to image_tag(@post.user.avatar.url, size: Settings.member.size),
		  @post.user %>
	      <% else %>
	        <%= link_to image_tag(Settings.member.url,
	          size: Settings.member.size1), @post.user %>
	      <% end %>
	      <a><%= link_to @post.user.name, @post.user %></a>
              <div class="mini-date">
		<span>@posted on</span>
		<span class="date">
		  <%= @post.created_at %>
		</span>
              </div>
	    <p class="detail break-word">
	      <%= @post.content %>
	    </p>
  	  </div>
  	</div>
      </div>
   </div>
</div>
