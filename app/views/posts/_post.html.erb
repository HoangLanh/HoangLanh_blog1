<div class="row blog-post">
  <% if @posts.any?%>
    <% @posts.each do |post| %>
      <div class="col-lg-12">
        <div class="thumbnail">
          <% if post.picture.present? %>
            <%= link_to image_tag(post.picture.url, size: Settings.size), post %>
          <% else %>
            <%= link_to image_tag(Settings.post.url,
              size: Settings.post.size), post %>
          <% end %>
	    <div class="caption">
	      <div class="item-info">
		<a class="name-title break-word"><%= link_to post.title, post %></a>
    <br/>
	        <% if post.user.avatar.present? %>
		  <%= link_to image_tag(post.user.avatar.url, size: Settings.member.size1), post.user %>
	        <% else %>
		  <%= link_to image_tag(Settings.member.url,
		    size: Settings.member.size1), post.user %>
	        <% end %>
		<a><%= link_to post.user.name, post.user %></a>
	        <div class="mini-date">
                  <span>posted on</span>
                  <span class="date">
                    <%= post.created_at %>
                  </span>
	        </div>
              <p class="detail break-word">
	        <%= truncate(post.content, length:100) %>
	          </p>
		</div>
		</div>
	    </div>
      </div>
    <% end %>
  <% end %>
</div>
